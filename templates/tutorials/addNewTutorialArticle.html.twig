{% extends 'tutorials/tutorials.html.twig' %}
{% block main %}
    <div class="container text-white mt-4">
        <form action="{{ path(pathToRouteWhereFormSend) }}" method="post" id="tutorial_form">
        <div class="row w-75 border ml-auto mr-auto rounded">
            <div class="col-12 article-head">
                <div class="p-1 title_max_length_alert" style="color:red; font-size: 16px"></div>
                <div class="row w-100">

                    <span class="text-danger p-1 m-0 h1 text-center">*</span><div class="col-8 text-justify text-monospace font-weight-bold px-0">
                        <h1 class="pr-0 m-0"><input name="tutorial_title" class="w-100 post_title pr-0" type="text"  maxlength="60" placeholder="Title (max 60 chars)"></h1>
                    </div>
                    <div id="title_chars_left" class="col-3 text-info align-self-center pt-2">
                        60: characters left
                    </div>
                </div>
                <div class="row">
                    <span class="text-danger p-0 m-0 h1 text-center pl-1">*</span><div class="col-4 post_category ml-0 p-1">
                        <input name="tutorial_category" type="text" maxlength="45" placeholder="category1, category2, category3">
                        <span class="badge badge-primary"></span>
                    </div>
                    <div class="col-3 p-1">
                        <input name="tutorial_author" type="text" maxlength="40" placeholder="Author: Name LastName">
                        <span class="article-author article-head-text-muted"></span>
                    </div>
                    <div class="col-3 p-1">
                        <span class="article-date-created article-head-text-muted">rrrr-mm-dd</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row w-75 border mr-auto ml-auto article-body mt-3 rounded">
            <span class="col-12 text-center">URL to main IMG</span>
            <div class="row w-100">
                <input name="tutorial_img" class="w-75 ml-auto mr-auto mt-2" type="text" maxlength="255" placeholder="https://WebIMGHost.com/Ks8JDs-this is an example url, u can paste img in imgur.com">
                <div class="col-12 article-img d-flex justify-content-center">
                </div>
            </div>
            <div class="row w-100">
                <div id="tutorial_short_description" class="col-11 ml-auto mr-auto article-body-text-muted">
                    Short description of the topic. (max 500 characters)
                    <textarea title="CKEditor_short_description" form="tutorial_form" name="ckeditorShortDesciption" maxlength="500" class="w-100 article-tutorial-short-description ckeditor">
                    </textarea>
                </div>
            </div>
            <div class="row w-100">

                <div class="col-11 ml-auto mr-auto">
                    <span class="text-danger p-0 m-0 h3 text-center">*</span> Main content.
                    <textarea title="CKEditor_main_content" form="tutorial_form" name="ckeditorMainContent" class="w-100 article-tutorial-main-topic ckeditor">
                    </textarea>
                </div>
            </div>
            <div class="row w-100">
                <div class="col-2 p-2 mr-0 pr-0 ml-auto p-2">
                    <a href="{{ path('home') }}" class="btn btn-box btn-danger">Cancel</a>
                </div>
                <div class="col-2 p-2 mr-auto ml-0 pl-0">
                    <input class="btn btn-box btn-info ml-0" type="submit" value="Send topic">
                </div>
            </div>
        </div>
        <div class="row w-75 border mr-auto ml-auto article-footer mt-3 mb-5 rounded">
            <div class="row w-100">
                <div class="col-12 p-2 ml-2">
                    similar topics
                </div>
            </div>
        </div>
    </form>
    </div>
{% endblock main %}
{% block javascripts %}
{{ parent() }}
    <script src="{{ asset('JS/tutorials/tutorialsValidate.js') }}"></script>
    <script src="{{ asset('JS/tutorials/ValidationHints.js') }}"></script>
{% endblock javascripts%}
